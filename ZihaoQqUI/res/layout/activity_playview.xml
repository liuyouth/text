<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/menub_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
       
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/to_back" />

        <TextView
        android:id="@+id/lab_singer"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:text="singer"
            android:textColor="#ffffff" />
 <ImageView
        android:id="@+id/imageView134"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/item_dwonload" />
         <ImageView
        android:id="@+id/imageView114"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/item_ok" />
             <ImageView
        android:id="@+id/imageView123"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/play" />
    </LinearLayout>

    <com.zihao.ui.CircleImageView
        android:id="@+id/img_singerimg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/app_ico" />

    <TextView
        android:id="@+id/lab_songid"
         android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="ID:45646546" />

    <ImageView
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/play" />

    <TextView
        android:id="@+id/lab_songname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_singerimg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="songName"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/btn_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_play"
        android:src="@drawable/to_lift" />

    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_play"
        android:src="@drawable/to_right" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_play"
        android:layout_alignParentLeft="true" />

</RelativeLayout>